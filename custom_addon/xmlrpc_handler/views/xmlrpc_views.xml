<!-- views/xmlrpc_views.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Connection Views -->
    <record id="view_xmlrpc_connection_tree" model="ir.ui.view">
        <field name="name">xmlrpc.connection.tree</field>
        <field name="model">xmlrpc.connection</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="url"/>
                <field name="database"/>
                <field name="username"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_xmlrpc_connection_form" model="ir.ui.view">
        <field name="name">xmlrpc.connection.form</field>
        <field name="model">xmlrpc.connection</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="test_connection" string="Test Connection" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="url"/>
                            <field name="database"/>
                        </group>
                        <group>
                            <field name="username"/>
                            <field name="password" password="true"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Handler Views -->
    <record id="view_xmlrpc_handler_tree" model="ir.ui.view">
        <field name="name">xmlrpc.handler.tree</field>
        <field name="model">xmlrpc.handler</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='done'" decoration-danger="state=='failed'">
                <field name="name"/>
                <field name="connection_id"/>
                <field name="model_name"/>
                <field name="operation"/>
                <field name="execution_time"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_xmlrpc_handler_form" model="ir.ui.view">
        <field name="name">xmlrpc.handler.form</field>
        <field name="model">xmlrpc.handler</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_execute" string="Execute" type="object"
                            class="oe_highlight" states="draft"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="connection_id"/>
                            <field name="model_name"/>
                            <field name="operation"/>
                        </group>
                        <group>
                            <field name="execution_time" widget="float_time"/>
                            <field name="create_date"/>
                            <field name="write_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Operation Parameters">
                            <group>
                                <field name="domain" attrs="{'invisible': [('operation', 'not in', ['search', 'search_read'])]}"/>
                                <field name="fields_list" attrs="{'invisible': [('operation', 'not in', ['read', 'search_read'])]}"/>
                                <field name="values" attrs="{'invisible': [('operation', 'not in', ['create', 'write'])]}"/>
                                <field name="ids_list" attrs="{'invisible': [('operation', 'not in', ['read', 'write', 'unlink'])]}"/>
                                <field name="method_name" attrs="{'invisible': [('operation', '!=', 'execute')]}"/>
                                <field name="method_args" attrs="{'invisible': [('operation', '!=', 'execute')]}"/>
                                <field name="method_kwargs" attrs="{'invisible': [('operation', '!=', 'execute')]}"/>
                            </group>
                        </page>
                        <page string="Result">
                            <group>
                                <field name="result" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Error" attrs="{'invisible': [('error_message', '=', False)]}">
                            <group>
                                <field name="error_message" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Log Views -->
    <record id="view_xmlrpc_log_tree" model="ir.ui.view">
        <field name="name">xmlrpc.log.tree</field>
        <field name="model">xmlrpc.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date"/>
                <field name="handler_id"/>
                <field name="model_name"/>
                <field name="operation"/>
                <field name="user_id"/>
                <field name="execution_time"/>
            </tree>
        </field>
    </record>
</odoo>